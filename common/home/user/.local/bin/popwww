#!/bin/sh

# Run or raise qutebrowser with specific dimensions

## The math below attempts to create a small window,
## centered horizontally, and slightly raised vertically

### script deps
### - xdotool
### - xwininfo
### - qutebrowser

get_dimensions() {
	# Determine res_x and res_y
read -r res_x res_y << EOF
	$(xwininfo -root | awk '{ORS=" "} /Width/ {print $2} /Height/ {print $2}')
EOF

	# Calculate window size
	 width=$(($res_x / 2 + $res_x / 5))
	height=$(($res_y / 2 + $res_y / 5))

	# Calculate x + y offset
	xoff=$(($res_x /  7))
	yoff=$(($res_y / 10))
}

# Start first instance, open urls in existing instance
browser_args() {
	qutebrowser --basedir $HOME/.config/qutebrowser-popwww \
		--backend webengine \
		--target tab \
		--override-restore \
		--loglevel critical \
		--qt-arg geometry ${width}x${height}+${xoff}+${yoff} \
		--qt-arg name popwww "$@" &
	if [ "$wid" ]; then xdotool windowmap $wid; fi
}

# Toggle mapped/unmapped, start qutebrowser if necessary
toggle_visibility() {
	if [ "$wid" ]; then 
		if xdotool search --onlyvisible --classname popwww; then
			xdotool windowunmap $wid
		else
			xdotool windowmap $wid
		fi
	else
		get_dimensions
		browser_args
	fi
}

# Get window id if it exists
wid=$(xwininfo -root -children | awk '/"popwww" "qutebrowser"/ {print $1}')

# Toggle mapped/unmapped else pass urls to existing instance
if [ "$#" -eq 0 ]; then
	toggle_visibility
else
	get_dimensions
	browser_args "$@"
fi
